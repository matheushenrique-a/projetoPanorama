{
  "manifest_version": 3,
  "name": "Dantas Ad Library Video Downloader",
  "version": "1.0",
  "description": "This extension adds a Download button to Meta video ad, allowing you to open the video in a new window to watch/download it.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}